<main>
  <section>
    <h1>Welcome to Dario s Blog App</h1>
  </section>
  <section>
    <h2>List of users</h2>
    <% if @users.empty? %>
      <h3>Currently there are not users in the database</h3>
    <% else %>
      <% @users.each do |user| %>
        <div class="users-section">
          <div class="user-card">
            <%= link_to user_path(user.id) do %>
              <img scr="<%= user.photo %>" alt="Image of user">
              <h4><%= user.name %></h4>
              <p>Number of posts: <%= user.post_counter %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </section>
</main>

